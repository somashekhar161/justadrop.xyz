{
  "name": "justadrop",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:api": "cd api && bun run dev",
    "dev:view": "cd view && bun run dev",
    "dev:dashboard": "cd dashboard && bun run dev",
    "build:api": "cd api && bun run build",
    "build:view": "cd view && bun run build",
    "build:dashboard": "cd dashboard && bun run build",
    "db:generate": "cd api && bun run db:generate",
    "db:migrate": "cd api && bun run db:migrate",
    "db:studio": "cd api && bun run db:studio",
    "db:cleanup": "cd api && bun run db:cleanup",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d postgres && sleep 3 && bun run db:migrate",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "cd api && bun run typecheck && cd ../view && bun run typecheck && cd ../dashboard && bun run typecheck",
    "lint": "bun run format:check && bun run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
